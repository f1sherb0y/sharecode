// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  username  String   @unique
  password  String
  color     String   @default("#30bced")
  role      String   @default("user") // "user" | "admin" | "superuser"
  canReadAllRooms   Boolean @default(false)
  canWriteAllRooms  Boolean @default(false)
  canDeleteAllRooms Boolean @default(false)
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  lastSeen  DateTime @default(now())

  ownedRooms Room[]            @relation("RoomOwner")
  rooms      RoomParticipant[]
  shareLinks RoomShareLink[]   @relation("ShareLinkOwner")

  @@index([email])
  @@index([username])
}

model Room {
  id            String    @id @default(uuid())
  name          String
  language      String    @default("javascript")
  documentId    String
  ownerId       String
  allowEdit     Boolean   @default(true)
  isDeleted     Boolean   @default(false)
  scheduledTime DateTime?
  duration      Int? // minutes
  isEnded       Boolean   @default(false)
  endedAt       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  owner         User              @relation("RoomOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  participants  RoomParticipant[]
  shareLinks    RoomShareLink[]
  guestSessions GuestSession[]

  @@index([ownerId])
  @@index([documentId])
}

model RoomParticipant {
  id       String   @id @default(uuid())
  roomId   String
  userId   String
  canEdit  Boolean  @default(true)
  joinedAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
}

model Document {
  id        String   @id @default(uuid())
  name      String   @unique
  data      Bytes?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model DocumentUpdate {
  id         String   @id @default(uuid())
  documentId String
  update     Bytes
  timestamp  DateTime @default(now())
  userId     String?

  @@index([documentId, timestamp])
}

model RoomShareLink {
  id         String   @id @default(uuid())
  roomId     String
  token      String   @unique
  canEdit    Boolean  @default(false)
  createdBy  String
  createdAt  DateTime @default(now())

  room   Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  owner  User @relation("ShareLinkOwner", fields: [createdBy], references: [id], onDelete: Cascade)
  guests GuestSession[]

  @@index([roomId])
  @@index([createdBy])
}

model GuestSession {
  id          String   @id @default(uuid())
  shareLinkId String
  roomId      String
  token       String   @unique
  displayName String
  email       String?
  color       String
  canEdit     Boolean  @default(false)
  createdAt   DateTime @default(now())
  lastActive  DateTime @default(now())

  shareLink RoomShareLink @relation(fields: [shareLinkId], references: [id], onDelete: Cascade)
  room      Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([shareLinkId])
}
